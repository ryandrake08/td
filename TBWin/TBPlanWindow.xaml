<Window x:Class="TBWin.TBPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBWin"
        mc:Ignorable="d"
        Title="Plan" Height="Auto" Width="Auto"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="16">
        <TextBlock HorizontalAlignment="Center" FontSize="22">Plan a new tournament with</TextBlock>
        <TextBox FontSize="48" Height="64" Width="160" HorizontalContentAlignment="Center"></TextBox>
        <TextBlock HorizontalAlignment="Center" FontSize="22">players</TextBlock>
        <TextBlock HorizontalAlignment="Center" Foreground="Red" FontSize="11">Warning: This will unseat EVERYONE from the current tournament and clear all buyins.</TextBlock>
        <Grid Margin="0,16,0,0">
            <Button Name="OKButton" Content="OK" HorizontalAlignment="Right"  Margin="93,0" VerticalAlignment="Bottom" Width="75" Click="OKButton_OnClick" IsDefault="True" />
            <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
        </Grid>
    </StackPanel>
</Window>
